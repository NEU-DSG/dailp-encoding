{
  "name": "dailp-website",
  "version": "0.1.0",
  "description": "Front-end for exploring Cherokee documents from DAILP",
  "type": "module",
  "scripts": {
    "dev:server": "vite --port 3001",
    "dev:generate": "graphql-codegen --watch",
    "dev": "npm-run-all --parallel dev:generate dev:server",
    "build:rustdoc": "cd .. && cargo doc --no-deps --workspace",
    "build:vite": "vite build && cp -rfT dist/client/ public/",
    "build": "graphql-codegen && npm-run-all --parallel build:vite build:rustdoc && cp -rfT ../target/doc/ public/rustdoc/",
    "serve": "NODE_ENV=production http-server public -p 3001",
    "generate": "graphql-codegen"
  },
  "sideEffects": false,
  "keywords": [],
  "author": "DAILP",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@fontsource/charis-sil": "^4.5.7",
    "@fontsource/quattrocento-sans": "^4.5.5",
    "@reach/dialog": "^0.16.2",
    "@reach/tooltip": "^0.16.2",
    "@react-hook/debounce": "^4.0.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@urql/core": "^4.1.1",
    "@urql/devtools": "^2.0.3",
    "@urql/exchange-auth": "^1",
    "@urql/exchange-graphcache": "^6.3.1",
    "amazon-cognito-identity-js": "^5.2.9",
    "aws-amplify": "^4.3.20",
    "classnames": "^2.3.1",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.11.0",
    "html-react-parser": "^1.4.11",
    "isomorphic-unfetch": "^3.1.0",
    "js-cookie": "^3.0.0-rc.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "normalize.css": "^8.0.1",
    "pluralize": "^8.0.0",
    "polished": "^4.2.2",
    "pure-react-carousel": "^1.30.1",
    "query-string": "^7.1.1",
    "react": "17",
    "react-beautiful-dnd": "^13.1.1",
    "react-date-picker": "^10.5.0",
    "react-device-detect": "^2.2.2",
    "react-dom": "17",
    "react-helmet": "^6.0.0",
    "react-icons": "^4.7",
    "react-markdown": "7",
    "react-select": "^5.7.7",
    "react-zoom-pan-pinch": "^2.1.3",
    "reakit": "^1.3.11",
    "urql": "^4.0.5",
    "uuid": "^9.0.0",
    "vite-plugin-ssr": "^0.4.70"
  },
  "devDependencies": {
    "@babel/helper-get-function-arity": "^7.16.7",
    "@graphql-codegen/cli": "^2.12.0",
    "@graphql-codegen/typescript": "^2.4.8",
    "@graphql-codegen/typescript-operations": "^2.3.5",
    "@graphql-codegen/typescript-urql": "^3.7",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/js-cookie": "^3.0.1",
    "@types/lodash": "^4.14.181",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.24",
    "@types/pluralize": "^0.0.29",
    "@types/react": "17",
    "@types/react-dom": "17",
    "@types/react-helmet": "^6.0.0",
    "@types/typography": "^0.16.3",
    "@types/uuid": "^9.0.1",
    "@vanilla-extract/css": "^1.9",
    "@vanilla-extract/recipes": "^0.2.4",
    "@vanilla-extract/vite-plugin": "^3.7",
    "@vitejs/plugin-react": "^2",
    "eslint": "^8.13.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.2",
    "react-ssr-prepass": "^1.5.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "typography": "^0.16.19",
    "vite": "^4",
    "vite-plugin-checker": "^0.5"
  },
  "browserslist": [
    "supports es6-module",
    "supports css-variables",
    "IE 11",
    "maintained node versions"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "tabWidth": 2,
    "importOrder": [
      "^src/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true
  },
  "postcss": {
    "map": false,
    "plugins": {
      "postcss-preset-env": {}
    }
  },
  "resolutions": {
    "graphql": "^16.3.0"
  }
}
