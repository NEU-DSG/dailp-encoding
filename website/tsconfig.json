{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "module": "es2020",
    "lib": ["dom"],
    "strict": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": true,
    "noImplicitAny": false,
    "noEmit": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/vite/**/*.d.ts"
  ]
}
